<div class="container-fluid">
	<div class="row text-center">
<ul>
	<% @user.errors.full_messages.each do |msg|%>
	<li><%= msg %></li>
	<% end%>
</ul>

<%= form_for @user do |p| %>

<p>
<%= p.label :Username%><br/>
<%= p.text_field :name%>
</p>
<p>
<%= p.label :email%><br/>
<%= p.email_field :email%>
</p>
<p>
<%= p.label :password%><br/>
<%= p.password_field :password%>
</p>

<p>
<%= p.label :password_confirmation%><br/>
<%= p.password_field :password_confirmation%>
</p>

<p>

<%= p.button :Create_User %>
</p>

<p>
	<fb:login-button scope="public_profile,email" onlogin="checkLoginState();" data-auto-logout-link="true">
	</fb:login-button>

	<div id="status">
	</div>

<%#= link_to('Share Access token with Rails', facebook_path, id: "fb-toke") %>
	<%#= render 'facebook/facebook' %>
</p>


<%= link_to "Index", posts_path unless 'new' %>
<% end%>
</div>
</div>

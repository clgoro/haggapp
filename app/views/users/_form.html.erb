<div class="container-fluid">
	<div class="row text-center">
<ul>
	<% @user.errors.full_messages.each do |msg|%>
	<li><%= msg %></li>
	<% end%>
</ul>

<%= form_for @user do |p| %>

<p>
<%= p.label :Username%><br/>
<%= p.text_field :name%>
</p> 
<p>
<%= p.label :email%><br/>
<%= p.email_field :email%>
</p>
<p>
<%= p.label :password%><br/>
<%= p.password_field :password%>
</p>

<p>

<%= p.submit %>
</p>


<%= link_to "Index", posts_path unless 'new' %>
<% end%>
</div>
</div>

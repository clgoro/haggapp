<%#= link_to "Create new post", new_post_path %>
<table class="table table-striped table-border">
	<thead>
		<tr>
			<td>Title</td>
			<td>Description</td>
			<td>Email</td>
			<td>Created Date</td>
			<td>Tags</td>
			<td>Actions</td>
		</tr>
	</thead>
	<tbody>
	<% obj.each do |p| %>
		<% if logged_in? && (current_user == p.user||current_user.admin?)%>
			<tr>
				<td><%= p.title %></td>
				<td><%= truncate(p.description) %></td>
				<td><%= p.user.try(:email) %></td>
				<td><%= time_ago_in_words(p.created_at) %> ago</td>
				<%#= raw p.tags.map(&:name).map { |t| link_to t, tag_path(t) }.join(', ') %>
				<td>Tags will go here</td>
				<td>
					<%= link_to 'View full post', post_path(p)  %>
				</td>
			</tr>
		<%end%>		
	<% end %>
	</tbody>
</table>